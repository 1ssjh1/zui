{
  "name": "zui3",
  "private": true,
  "version": "3.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "dev:exts": "tsx ./scripts/dev/index.ts",
    "build:vite": "tsc && vite build",
    "build": "tsx ./scripts/build",
    "preview": "vite preview",
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint .",
    "docs:dev-fast": "cd docs && pnpm dev",
    "docs:dev": "pnpm docs:prepare && pnpm docs:dev-fast & pnpm docs:watch",
    "docs:dev:exts": "pnpm docs:prepare -- --exts --lib=zui*exts && pnpm docs:dev-fast & pnpm docs:watch -- --exts",
    "docs:watch": "tsx ./scripts/docs/watch.ts",
    "docs:build": "pnpm docs:prepare -- --copy && cd docs && pnpm build",
    "docs:build:exts": "pnpm docs:prepare -- --copy --exts --lib=zui*exts && cd docs && pnpm build",
    "docs:serve": "cd docs && pnpm serve",
    "docs:prepare": "tsx ./scripts/docs/prepare.ts",
    "extend-lib": "tsx ./scripts/libs/extend-lib.ts"
  },
  "workspaces": [
    "./lib"
  ],
  "dependencies": {
    "@zui/base": "workspace:0.0.1",
    "@zui/scrollbar": "workspace:0.0.1",
    "@zui/utilities": "workspace:0.0.1",
    "highlight.js": "^11.6.0"
  },
  "devDependencies": {
    "@mertasan/tailwindcss-variables": "^2.5.1",
    "@tailwindcss/line-clamp": "0.4.2",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "8.0.0",
    "@types/markdown-it": "^12.2.3",
    "@types/minimist": "^1.2.2",
    "@types/node": "18.7.23",
    "@typescript-eslint/eslint-plugin": "5.38.1",
    "@typescript-eslint/parser": "5.38.1",
    "autoprefixer": "10.4.12",
    "chokidar": "^3.5.3",
    "colorette": "^2.0.19",
    "cssnano": "5.1.13",
    "eslint": "8.24.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": ">=2.25.3 <3.0.0",
    "fast-glob": "3.2.12",
    "fs-extra": "^10.1.0",
    "markdown-it": "^13.0.1",
    "markdown-it-anchor": "8.6.5",
    "markdown-it-toc-done-right": "^4.2.0",
    "minimist": "^1.2.6",
    "postcss": "8.4.16",
    "postcss-import": "15.0.0",
    "postcss-nesting": "10.2.0",
    "postcss-rem-to-pixel": "^4.1.2",
    "stylelint": "14.12.1",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard": "28.0.0",
    "stylelint-order": "^5.0.0",
    "tailwindcss": "^3.1.8",
    "tsx": "3.9.0",
    "typescript": "4.8.3",
    "vite": "^3.2.3",
    "vite-plugin-eslint": "1.8.1"
  }
}
